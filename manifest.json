{
    "manifest_version": 3,
    "browser_specific_settings": {
        "gecko": {
            "id": "FUCKGRID@bass9030.dev",
            "strict_min_version": "58.0"
        }
    },
    "name": "FUCK CHZZK GRID",
    "description": "I HATE FUCKING CHZZK GRID(Bypass CHZZK grid)",
    "version": "2.1.0",
    "permissions": ["activeTab", "scripting", "declarativeNetRequest"],
    "host_permissions": [
        "*://chzzk.naver.com/*",
        "*://*.navercdn.com/*",
        "*://livecloud.pstatic.net/*",
        "*://livecloud.akamaized.net/*"
    ],
    "declarative_net_request": {
        "rule_resources": [
            {
                "id": "ruleset_1",
                "enabled": true,
                "path": "rules.json"
            }
        ]
    },
    "content_scripts": [
        {
            "matches": ["https://chzzk.naver.com/live/*"],
            "js": ["inject.js"]
        }
    ],
    "background": {
        "service_worker": "background.js",
        "scripts": ["background.js"]
    },
    "action": {
        "default_icon": "icon.png"
    }
}
